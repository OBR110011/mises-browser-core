bundle_data_from_filelist("test_support_bundle_data") {
  visibility = [ ":shell" ]
  testonly = true
  filelist_name = "data/test_support_bundle_data.filelist"
}

bundle_data("extensions_shell_framework_resources") {
    testonly = true
    sources = [ "$root_out_dir/extensions_shell_and_test.pak" ]

    public_deps = [ "//extensions:shell_and_test_pak" ]

    outputs = [ "{{bundle_resources_dir}}/{{source_file_part}}" ]
  }